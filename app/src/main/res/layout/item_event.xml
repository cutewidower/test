<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/event_item_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/event_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_transfusion"/>
            <TextView
                android:id="@+id/event_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/event_item_image"/>
            <TextView
                android:id="@+id/event_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/event_item_image"
                android:layout_below="@+id/event_item_location"/>
            <TextView
                android:id="@+id/event_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/event_item_image"
                android:layout_below="@+id/event_item_desc"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>